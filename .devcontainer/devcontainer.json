{
	"name": "Template_repo",
	"build": {
		"context": "..",
		"dockerfile": "./Dockerfile",
		"options": ["--platform=linux/amd64"]
	},

	// VScode extensions
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"charliermarsh.ruff",
				"tamasfe.even-better-toml",
				"bazelbuild.vscode-bazel",
				"llvm-vs-code-extensions.vscode-clangd",
				"github.vscode-github-actions"
			]
		}
	},

	"containerEnv": {
		"SSH_AUTH_SOCK": "/ssh-agent",
        "PYTHONPATH": "/workspaces/Template_repo:/opt/ros/jazzy/lib/python3.12/site-packages:/venv/lib/python3.12/site-packages"
    },

	// "mounts": [
	// 	"${localEnv:CI+skip}source=${localEnv:HOME}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached,optional",
	// 	"${localEnv:CI+skip}source=${localEnv:HOME}/.ssh/id_rsa,target=/root/.ssh/id_rsa,type=bind,consistency=cached,optional"
  	// ]
	"runArgs": [
		"-v", "${env:SSH_AUTH_SOCK}:/ssh-agent"
	]
}
